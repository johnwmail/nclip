{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "firefox",
            "request": "attach",
            "name": "Attach"
        },
        {
            "name": "Launch Firefox against localhost:8080",
            "type": "firefox",
            "request": "launch",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}/static",
            "pathMappings": [
                {
                    "url": "http://localhost:8080/static",
                    "path": "${workspaceFolder}/static"
                }
            ],
            "preferences": {
                "devtools.chrome.enabled": true,
                "devtools.debugger.remote-enabled": true
            }
        }
    ]
}
</content>
</invoke>